{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    // "height": 36, // Waybar height (to be removed for auto height)
    // Archived modules
    // "custom/gpu", "bluetooth",  "custom/weather", "temperature", "sway/window"
    // Choose the order of the modules
    "modules-left": ["custom/power", "hyprland/workspaces", "hyprland/window", "custom/media"],
    "modules-center": ["clock"],
    "modules-right": [ "custom/pacman", "cpu", "temperature", "pulseaudio", "bluetooth", "network", "tray"],
    // Modules configuration
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "1": "<span color=\"#D8DEE9\">1</span>",
            "2": "<span color=\"#88C0D0\">2</span>",
            "3": "<span color=\"#A3BE8C\">3</span>",
            "4": "<span color=\"#D8DEE9\">4</span>",
            "urgent": "ÔÅ™",
            "focused": "",
            "default": ""
        }
    },
    "hyprland/window": {
        "format": "{initialTitle}",
        "max-length": 50,
        "tooltip": false
    },
    "bluetooth": {
        "interval": 30,
        "format": "{icon}",
        // "format-alt": "{status}",
        "format-icons": {
            "enabled": "Ôäì",
            "disabled": "Ôöî"
        },
        "on-click": "blueberry"
    },    
    "tray": {
        //"icon-size": 11,
        "spacing": 5
    },
    "clock": {
        "format": "ÔÄó  {:%I:%M %p  ÔÅ≥ %a, %b %e}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "interval": 60
    },
    "cpu": {
        "interval": "1",      
        "format": "Ôãõ  {max_frequency}GHz <span color=\"darkgray\">| {usage}%</span>",
        "max-length": 13,
        "min-length": 13,
        "on-click": "kitty -e htop --sort-key PERCENT_CPU",
        "tooltip": false
    },
    "network": {
        // "interface": "wlan0", // (Optional) To force the use of this interface,
        "format-wifi": "Ôá´  {essid}",
        "format-ethernet": "{ifname}: {ipaddr}/{cidr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Ôöî",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "family": "ipv4",
        "tooltip-format-wifi": "Ôá´  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nÔçó {bandwidthUpBits} Ôçî {bandwidthDownBits}",
        "tooltip-format-ethernet": "Ôûñ {ifname}\nIP: {ipaddr}\nÔçó {bandwidthUpBits} Ôçî {bandwidthDownBits}"
    },
    "pulseaudio": {
        "scroll-step": 3, // %, can be a float
        "format": "{icon} {volume}% {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        //"format-source": "{volume}% ÔÑ∞",
        //"format-source-muted": "ÔÑ±",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pactl set-source-mute @DEFAULT_SOURCE@ toggle"
    },
    // "wireplumber": {
    //     "scroll-step": 3, // %, can be a float
    //     "format": "{volume}%",
    //     "format-muted": "Ôö© {format_source}",
    //     //"format-source": "{volume}% ÔÑ∞",
    //     //"format-source-muted": "ÔÑ±",
    //     // "format-source": "ÔÑ∞",
    //     // "format-source-muted": "ÔÑ±",
    //     "on-click": "pavucontrol"
    // },
    "custom/pacman": {
        "format": "<big>ÔÄô</big>  {}",
        "interval": 3600,                     // every hour
        "exec": "checkupdates | wc -l",       // # of updates
        "exec-if": "exit 0",                  // always run; consider advanced run conditions
        "on-click": "kitty -e 'yay'; pkill -SIGRTMIN+8 waybar", // update system
        "signal": 8,
        "max-length": 5,
        "min-length": 3
    },
    "custom/media": {
        "format": "{0} {1}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "default": "üéú "
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
        "format": "ÔÄë",
        "on-click": "rofi -show power-menu -modi power-menu:rofi-power-menu"
    }
}